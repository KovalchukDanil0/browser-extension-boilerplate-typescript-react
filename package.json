{
  "name": "browser-extension-boilerplate-typescript-react",
  "version": "1.0",
  "description": "Browser extension boilerplate built with React, typescript, Daisyui, Webpack, Tailwind CSS and WebExtension Polyfill",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KovalchukDanil0/browser-extension-boilerplate-typescript-react.git"
  },
  "scripts": {
    "bin": "tsc src/bin.ts --outFile bin/index.js",
    "build": "npm run build:chrome",
    "build:chrome": "NODE_ENV=production BROWSER=chrome ts-node utils/build.ts",
    "build:firefox": "NODE_ENV=production BROWSER=firefox ts-node utils/build.ts",
    "start": "npm run start:chrome",
    "start:chrome": "NODE_ENV=development BROWSER=chrome ts-node utils/webserver.ts",
    "start:firefox": "NODE_ENV=development BROWSER=firefox ts-node utils/webserver.ts",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.10",
    "postcss": "^8.4.41",
    "postcss-load-config": "^6.0.1",
    "react": "^18.3.1",
    "react-daisyui": "^5.0.3",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.7",
    "tailwindcss-animated": "1.1.0",
    "ts-node": "^10.9.2",
    "webextension-polyfill": "^0.10.0"
  },
  "bin": "./bin/index.js",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "7.24.7",
    "@babel/plugin-transform-class-properties": "7.24.7",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.24.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@types/chrome": "^0.0.261",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/webextension-polyfill": "^0.10.7",
    "@types/zip-webpack-plugin": "^3.0.6",
    "babel-loader": "^9.1.3",
    "babel-preset-react-app": "^10.0.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.11.0",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react-refresh": "^0.14.2",
    "react-refresh-typescript": "^2.0.9",
    "sass": "^1.77.8",
    "sass-loader": "^14.2.1",
    "source-map-loader": "^5.0.0",
